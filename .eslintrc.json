{
  "env": {
      "node": true,
      "mocha": true,
      "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
      "indent": [
          "error", 2, {
              "SwitchCase": 1
          }
      ],
      "linebreak-style": [
          "error", "unix"
      ],
      "no-console": 0,
      "no-trailing-spaces": [
          "error"
      ],
      "no-unused-vars": [
          "error", {
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
          }
      ],
      "object-curly-spacing": [
          "error", "always"
      ],
      "quotes": [
          "error", "single", {
              "avoidEscape": true
          }
      ],
      "semi": [
          "error", "always"
      ],
      "space-before-blocks": [
          "error", "always"
      ]
  }
}
